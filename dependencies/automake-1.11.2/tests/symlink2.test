# Test to make sure that `automake -a' redirects dangling symlinks.

. ./defs || Exit 1

set -e

rm -f install-sh
ln -s Zardoz install-sh || {
  echo "$me: cannot create broken symlinks" >&2
  Exit 77
}

: > Makefile.am

$ACLOCAL
$AUTOMAKE --add-missing

test -f install-sh
test ! -r Zardoz

:
